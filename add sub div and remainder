// Write a programme to find addition , subtraction ,  multiplication and reminder of two numbers
#include<stdio.h>
int main(){
    int a,b,sum,sub,mult,rem;
    printf("enter 1st number -> ");
    scanf("%d" , &a);
    printf("enter 2nd number -> ");
    scanf("%d" , &b);
    
    sum = a+b;
    sub = a-b;
    mult = a*b;
    rem = a%b;

    printf("the sum of the two numbers = %d \n", sum );
    printf("the multiplication of the two numbers = %d \n", mult );
    printf("the subtraction of the two numbers = %d \n", sub );
    printf("the remainder of the two numbers = %d \n", rem );
  
    return 0;
} 
